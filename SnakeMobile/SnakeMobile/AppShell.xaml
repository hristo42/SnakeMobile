<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SnakeMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SnakeMobile"
    xmlns:snakeMobile="using:SnakeMobile"
    Shell.FlyoutBehavior="Flyout"
    Title="SnakeMobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Login">
        <ShellContent ContentTemplate="{DataTemplate snakeMobile:LoginPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Game play">
        <ShellContent ContentTemplate="{DataTemplate snakeMobile:GamePlayPage}"></ShellContent>
    </FlyoutItem>

</Shell>
