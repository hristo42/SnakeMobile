<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnakeMobile.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Entry x:Name="UsernameEntry" Placeholder="Username" TextColor="MidnightBlue" BackgroundColor="{StaticResource PrimaryDark}" Margin="10" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" TextColor="MidnightBlue" BackgroundColor="{StaticResource PrimaryDark}" Margin="10" />
        <Button Text="Register" BackgroundColor="{StaticResource PrimaryDark}" TextColor="MidnightBlue" Clicked="OnRegisterBtnClicked" Margin="10" />
        <Button Text="Login" BackgroundColor="MidnightBlue" TextColor="{StaticResource PrimaryDark}" Clicked="OnLoginBtnClicked" Margin="100" />
    </VerticalStackLayout>
</ContentPage>